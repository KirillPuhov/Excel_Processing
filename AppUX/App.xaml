<Application x:Class="AppUX.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="SplashScreen.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary Source="Resources/Light.xaml"/>
                <ResourceDictionary Source="Resources/Dark.xaml"/>
                
                <ResourceDictionary Source="Theme/Window.xaml" />

                <ResourceDictionary Source="Resources/DE-de.xaml"/>
                <ResourceDictionary Source="Resources/Fr-fr.xaml"/>
                <ResourceDictionary Source="Resources/Ru-ru.xaml"/>
                <ResourceDictionary Source="Resources/En-en.xaml"/>
                
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
