                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="{DynamicResource filePath}" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,50,0"/>
                <TextBox IsReadOnly="True" Text="{Binding Path=UserPath, Mode=TwoWay}" Width="350" Height="20" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.ColumnSpan="2" Margin="191,14,0,13"/>
                <Button Grid.Column="1" Command="{Binding OpenPathPickerCommand}" Style="{DynamicResource RoundedButton}" Content="{DynamicResource open}" VerticalAlignment="Center" HorizontalAlignment="Right" Width="70" Margin="0,12,58,13"/>
            </Grid>
        </GroupBox>

        <StackPanel Margin="0, 13, 0, 0" Grid.Column="2">
            <Button Command="{Binding ApplySettingsCommand}" x:Name="SetSettingsButton" Content="{DynamicResource apply}" Style="{DynamicResource RoundedButton}" Margin="0"/>
            <Button Command="{Binding BackSettingsCommand}" x:Name="DefaultSettingsButton" Content="{DynamicResource back}" Style="{DynamicResource RoundedButton}" Margin="0, 7, 0, 0"/>
